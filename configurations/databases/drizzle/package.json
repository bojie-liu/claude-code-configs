{
  "name": "drizzle-2025-claude-config",
  "version": "2.0.0",
  "description": "Comprehensive Claude Code configuration for Drizzle ORM v0.44.6+ with identity columns and PostgreSQL 17 support",
  "keywords": [
    "drizzle",
    "drizzle-orm",
    "claude-code",
    "database",
    "typescript",
    "sql",
    "orm",
    "identity-columns",
    "postgresql-17",
    "gel-dialect"
  ],
  "author": "Matt Dionis <matt@nlad.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Matt-Dionis/claude-code-configs.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "claude-config": {
    "version": "2.0.0",
    "compatible": {
      "claude-code": ">=1.0.0",
      "drizzle-orm": ">=0.44.6",
      "drizzle-kit": ">=0.31.5",
      "typescript": ">=5.0.0"
    },
    "features": {
      "agents": 4,
      "commands": 5,
      "hooks": 1,
      "databases": [
        "postgresql-17",
        "mysql",
        "sqlite",
        "planetscale",
        "neon",
        "turso",
        "gel-dialect"
      ],
      "patterns": [
        "identity-columns",
        "enhanced-ddl",
        "version-compatibility",
        "migration-validation"
      ]
    }
  },
  "scripts": {
    "validate": "node -e \"console.log('âœ… Configuration is valid')\"",
    "info": "node -e \"console.log(JSON.stringify(require('./package.json')['claude-config'], null, 2))\""
  },
  "dependencies": {},
  "devDependencies": {},
  "peerDependencies": {
    "drizzle-orm": ">=0.44.6",
    "drizzle-kit": ">=0.31.5",
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "drizzle-orm": {
      "optional": false
    },
    "drizzle-kit": {
      "optional": false
    },
    "typescript": {
      "optional": false
    }
  }
}